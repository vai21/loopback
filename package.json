{
  "name": "loopback",
  "version": "1.0.0",
  "description": "loopback",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist tsconfig.build.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t loopback .",
    "docker:run": "docker run -p 3000:3000 -d loopback",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "tsc-watch --target es2017 --outDir ./dist --onSuccess \"node .\"",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/boot": "^1.4.1",
    "@loopback/context": "^1.19.1",
    "@loopback/core": "^1.8.2",
    "@loopback/openapi-v3": "^1.6.2",
    "@loopback/repository": "^1.7.0",
    "@loopback/rest": "^1.16.0",
    "@loopback/rest-explorer": "^1.2.2",
    "@loopback/service-proxy": "^1.2.2",
    "nodemon": "^1.19.1"
  },
  "devDependencies": {
    "@loopback/build": "^2.0.0",
    "@loopback/eslint-config": "^1.1.2",
    "@loopback/testlab": "^1.6.0",
    "@types/node": "^10.14.8",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^5.3.0",
    "tsc-watch": "^2.2.1",
    "typescript": "~3.5.2"
  }
}
